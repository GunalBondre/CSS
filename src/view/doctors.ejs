    <%- include('partials/bootstrap') %>
  </head>
  <body>
    <!-- navbar included -->
    <div class="nav-parent">
      <%- include('partials/navbar') %>
    </div>
    <!-- navbar included -->
    <!-- first div started -->
    <div class="top-container-wrapper">
      <div class="color-bg">
        <header>Cardiac surgeon in <u><%=location%></u></header>
      </div>
    </div>
    <div class="sort-section">
      <h4>Home/Doctor List</h4>
      <div class="dropdown">
        <button
          class="btn btn-secondary dropdown-toggle"
          type="button"
          id="dropdownMenuButton"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="false"
        >
          Sort By
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="#">Name</a>
          <a class="dropdown-item" href="#">Experience</a>
          <a class="dropdown-item" href="#">City</a>
        </div>
      </div>
    </div>
    <section class="main">
      <div class="left">
        <h5>Filter by</h5>
        <p>Location</p>
        <div class="form-check">
          <form action="/doctors/search" method="GET">
            <% list.forEach(item=>{ %> <% if(item.location){%>
            <input
              class="form-check-input-position-static"
              type="checkbox"
              name="searchLocation"
              onChange="this.form.submit()"
              value="<%= item.location%>"
            />
            <label><%= item.location%></label><br />
            <% }}) %>
          </form>
          <!-- <input
            class="form-check-input-position-static"
            type="checkbox"
            checked
          />
          <label>DLF cyber city</label><br />
          <input class="form-check-input-position-static" type="checkbox" />
          <label>Dwarka</label><br />
          <input class="form-check-input-position-static" type="checkbox" />
          <label>lajpat nagar</label><br />
          <input class="form-check-input-position-static" type="checkbox" />
          <label>panjabi baug</label><br />
          <input class="form-check-input-position-static" type="checkbox" />
          <label>pusa road</label><br /> -->
          <a id="toggleButton" onclick="toggleText()" href="javascript:void(0)"
            >+Show more</a
          >
        </div>
        <hr />
        <p>Treatment</p>
        <div class="form-check">
          <form action="/doctors/treatment" method="GET">
            <% list.forEach(item=>{ %>
            <input
              class="form-check-input-position-static"
              type="checkbox"
              onChange="this.form.submit()"
              value="<%= item.treatment%>"
              name="searchTreatment"
            />
            <label><%= item.treatment%></label><br />
            <%})%>
          </form>
          <!-- <input class="form-check-input-position-static" type="checkbox" />
          <label>Orthopedic surgery</label><br />
          <input class="form-check-input-position-static" type="checkbox" />
          <label>Infertility Treatment</label><br />
          <input class="form-check-input-position-static" type="checkbox" />
          <label>Dentistry</label><br />
          <input class="form-check-input-position-static" type="checkbox" />
          <label>Cardiology</label><br /> -->
          <a id="toggleButton" onclick="toggleText2()" href="javascript:void(0)"
            >+Show more</a
          >
        </div>
        <hr />
        <p>Hospitals</p>
        <div class="form-check">
          <form action="/doctors/hospital" method="GET">
            <% list.forEach(item=>{ %>
            <input
              class="form-check-input-position-static"
              type="checkbox"
              onChange="this.form.submit()"
              value="<%= item.hospitalList%>"
              name="searchHospital"
            />
            <label><%= item.hospitalList%></label><br />
            <%})%>
          </form>
          <!-- <input class="form-check-input-position-static" type="checkbox" />
          <label>Sahyadri Hospital</label><br />
          <input class="form-check-input-position-static" type="checkbox" />
          <label>jehangir hospital</label><br />
          <input class="form-check-input-position-static" type="checkbox" />
          <label>Ruby hospital</label><br />
          <input class="form-check-input-position-static" type="checkbox" />
          <label>Sasoon Hospital</label><br /> -->
          <a id="toggleButton" onclick="toggleText3()" href="javascript:void(0)"
            >+Show more</a
          >
        </div>
        <hr />
        <p>Experience</p>
        <div class="form-check">
          <input
            class="form-check-input-position-static"
            type="checkbox"
            checked
          />
          <label>30+</label><br />
          <input class="form-check-input-position-static" type="checkbox" />
          <label>25+</label><br />
          <input class="form-check-input-position-static" type="checkbox" />
          <label>20+</label><br />
          <input class="form-check-input-position-static" type="checkbox" />
          <label>15+</label><br />
          <input class="form-check-input-position-static" type="checkbox" />
          <label>10+</label><br />
          <a id="toggleButton" onclick="toggleText4()" href="javascript:void(0)"
            >+Show more</a
          >
        </div>
        <hr />
      </div>
      <div class="doc-wrapper-parent">
        <div class="main_wrapper__doc_list">
          <% list.forEach(item=>{%>
          <form
            action="/bookSlot/<%=item.createdBy._id%>"
            id="formid"
            method="GET"
          >
            <div class="doc-wrapper">
              <div class="doc-list py-2" id="parent">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">
                      <span
                        ><h2>
                          <%=item.createdBy.name %>
                        </h2></span
                      >
                    </h5>
                    <div class="info-grid">
                      <div class="left-info">
                        <p class="card-text py-1">
                          <i class="fas fa-medal"></i
                          ><span><%= item.speciality%></span>
                        </p>
                        <p class="card-text py-1">
                          <i class="fas fa-certificate"> </i
                          ><span><%= item.education%></span>
                        </p>
                        <!-- <p class="card-text py-1"></span>
                </p> -->
                        <p class="card-text py-1">
                          <i class="fas fa-clock"></i
                          ><span>
                            <%= item.experience %> Years of experience</span
                          >
                        </p>
                      </div>
                      <div class="right-info">
                        <p class="card-text py-1">
                          <i class="fas fa-map-marker"></i
                          ><span> <%= item.location %> </span>
                        </p>
                        <span class="info"
                          ><p class="card-text py-1">
                            <i class="fas fa-hospital"></i
                            ><span><%= item.hospitalList %></span>
                          </p></span
                        >
                      </div>
                    </div>
                    <div class="button-div">
                      <button
                        class="btn btn-dark my-3 toggleBtn"
                        type="submit"
                        id="slot_toggle"
                      >
                        Book Appointment
                      </button>
                    </div>
                  </div>
                  <img
                    class="card-img-top"
                    src="/<%= item.avatar %>"
                    class="img-fluid w-100"
                    alt="Card image cap"
                  />
                </div>
              </div>
            </div>
          </form>
          <% })%>
          <div class="slot_display_div__parent_div"></div>
        </div>
        <div class="pagination_div">
          <nav aria-label="Page navigation example">
            <ul class="pagination">
              <% if(hasPreviousPage) { %>
              <li class="page-item">
                <a class="page-link" href="?page=<%= previousPage %>"
                  >Previous</a
                >
              </li>
              <%}%>
              <li class="page-item">
                <a class="page-link" href="?page=1">1</a>
              </li>
              <li class="page-item">
                <a class="page-link" href="?page=2">2</a>
              </li>

              <% if (hasNextPage) { %>

              <li class="page-item">
                <a class="page-link" href="?page=<%= nextPage %>">Next</a>
              </li>
              <%}%>
            </ul>
          </nav>
        </div>
      </div>
    </section>
    <%- include('footer') %>
    <script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
  </body>
</html>
