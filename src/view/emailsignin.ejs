<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Signup</title>
    <%- include('partials/bootstrap') %>
    <link rel="stylesheet" href="/reset.css" type="text/css" />
    <link rel="stylesheet" href="/registration/signin.css" type="text/css" />
  </head>
  <body>
    <!-- navbar included -->
    <div class="nav-parent">
      <%- include('partials/navbar') %>
    </div>
    <!-- navbar included -->

    <!-- signup form -->
    <section class="signin">
      <div class="form-wrapper">
        <div class="form-group">
          <header>Sign In</header>
          <hr />
          <form action="/users/emailsignin" method="POST">
            <input
              type="email"
              class="form-control my-2"
              id="email"
              aria-describedby="emailHelp"
              placeholder="Enter Email"
              name="email"
            />
            <input
              type="password"
              class="form-control"
              id="password"
              aria-describedby="emailHelp"
              placeholder="Enter password"
              name="password"
            />
            <p class="py-2" style="float: left;">
              <a href="signin">Otp Signin</a>
            </p>
            <p class="py-2" style="float: right;">
              <a href="#">Forgot Password</a>
            </p>
            <button type="submit" class="btn btn-primary my-2" id="btn">
              Sign In <i class="fas fa-sign-in-alt"></i>
            </button>
            <p class="py-3">Not registered? : <a href="signup">Signup</a></p>
          </form>
        </div>
      </div>
    </section>
    <footer>All rights reserved &copy; Tvstra.com</footer>
  </body>
</html>
