    <%- include('partials/bootstrap') %>

    <style>
      /* Set the size of the div element that contains the map */
      #map {
        height: 300px; /* The height is 400 pixels */
        width: 90%; /* The width is the width of the web page */
        margin: 0 auto;
        margin-top: 20px;
      }
    </style>
