<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/reset.css" type="text/css" />
    <link rel="stylesheet" href="/doctor-profile/profile.css" type="text/css" />
    <link rel="stylesheet" href="/theme/theme.css" type="text/css" />
    <link rel="stylesheet" href="/dashboard/dashboard.css" type="text/css" />
    <%- include('partials/bootstrap') %>
    <script type="text/javascript" src="/flashMessages.js"></script>
    <!-- <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.5/css/bootstrap.min.css"
    /> -->
    <link
      rel="stylesheet"
      href="http://bootstrap-tagsinput.github.io/bootstrap-tagsinput/dist/bootstrap-tagsinput.css"
    />
  </head>
  <body>
    <%- include('partials/navbar') %>

    <div class="wrapper">
      <div class="left-panel">
        <header>Dashboard</header>
        <div class="profile">
          <a href="/users/profile">General Details</a>
        </div>
        <hr />

        <div class="docprofile">
          <a href="/users/professional_profile">Professional Details</a>
        </div>
        <hr />
        <div class="appointments">
          <a href="#">Appointments</a>
        </div>
        <hr />
        <div class="create/edit">
          <a href="/createSchedule">Create/edit appointments</a>
        </div>
        <hr />
        <div class="setting">
          <a href="#">Settings</a>
        </div>
      </div>
      <div class="right-panel">
        <form action="/users/professional_profile" method="POST">
          <input type="hidden" name="_method" value="PUT" />
          <div class="header-info-and-button">
            <header>Accounts</header>
            <button type="submit" class="btn btn-primary">Save changes</button>
          </div>
          <section class="top">
            <div class="form-group">
              <div><label for="speciality">speciality</label></div>

              <input
                type="text"
                class="form-control"
                id="speciality"
                data-role="tagsinput"
                value="<%= speciality %>"
                name="speciality"
              />
            </div>
            <div class="form-group">
              <div><label for="speciality">education</label></div>
              <input
                type="text"
                class="form-control"
                id="education"
                value="<%= education %>"
                name="education"
                data-role="tagsinput"
              />
            </div>
          </section>
          <section class="middle">
            <div class="form-group">
              <div><label for="speciality">treatment</label></div>

              <input
                type="text"
                class="form-control"
                id="treatment"
                data-role="tagsinput"
                value="<%= treatment %>"
                name="treatment"
              />
            </div>
            <div class="form-group">
              <div><label for="speciality">location</label></div>
              <input
                type="text"
                class="form-control"
                id="location"
                data-role="tagsinput"
                value="<%= location %>"
                name="location"
              />
            </div>
            <div class="form-group">
              <div><label for="speciality">hospitalList</label></div>
              <input
                type="text"
                class="form-control"
                id="hospitalList"
                data-role="tagsinput"
                value="<%= hospitalList %>"
                name="hospitalList"
              />
            </div>
            <div class="form-group">
              <div><label for="speciality">achievements</label></div>
              <input
                type="text"
                class="form-control"
                id="achievements"
                data-role="tagsinput"
                value="<%= achievements %>"
                name="achievements"
              />
            </div>
          </section>
          <section class="bottom">
            <div class="form-group">
              <div><label for="speciality">awards</label></div>
              <input
                type="text"
                class="form-control"
                id="awards"
                data-role="tagsinput"
                value="<%= awards %>"
                name="awards"
              />
            </div>
            <div class="form-group">
              <div><label for="speciality">fee</label></div>
              <input
                type="text"
                class="form-control"
                id="fee"
                data-role="tagsinput"
                value="<%= fee %>"
                name="fee"
              />
            </div>
          </section>
          <hr />
        </form>
      </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="http://bootstrap-tagsinput.github.io/bootstrap-tagsinput/dist/bootstrap-tagsinput.min.js"></script>
  </body>
</html>
